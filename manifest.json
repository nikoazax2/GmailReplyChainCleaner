{
  "manifest_version": 3,
  "name": "Gmail Reply Chain Cleaner",
  "version": "1.0.0",
  "description": "Automatically removes reply chains from Gmail messages",
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
